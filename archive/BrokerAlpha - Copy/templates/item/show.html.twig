{% extends 'base.html.twig' %}

{% block title %}Item{% endblock %}

{% block body %}

     <div class="contentPage-headerShow">
        <div class="contentPage-headerShow-left">
            <a href="{{ path('app_item_index') }}"><i class="icon-enter5"></i></a>
            <h1>Item</h1>
        </div>

        <div class="contentPage-headerShow-right">
            <a href="{{ path('app_item_edit', {'id': item.id}) }}"><i class="icon-pencil"></i></a>
            {{ include('item/_delete_form.html.twig') }} 
        </div>
    </div>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ item.id }}</td>
            </tr>
            <tr>
                <th>Label</th>
                <td>{{ item.label }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ item.description }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ item.price }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ item.createdAt ? item.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}
