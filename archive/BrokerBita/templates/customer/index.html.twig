{% extends 'base.html.twig' %}

{% block title %}Customer index{% endblock %}

{% block body %}
    
    <div class="contentPage-headerIndex">
        <h1>Customers.</h1>
        <a href="{{ path('app_customer_new') }}"><i class="icon-add"></i></a>
    </div> 

    <table id="example" class="display table" style="width:100%">
        <thead>
            <tr>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Username</th>
                <th>Profile</th>
                <th>CreatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for customer in customers %}
            <tr>
                <td>{{ customer.firstname }}</td>
                <td>{{ customer.lastname }}</td>
                <td>{{ customer.email }}</td>
                <td>{{ customer.phone }}</td>
                <td>{{ customer.username }}</td>
                <td><img src="{{ customer.profile }}" class="profilImage"/></td>
                <td>{{ customer.createdAt ? customer.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_customer_show', {'id': customer.id}) }}"><i class="icon-eye"></i></a>
                    <a href="{{ path('app_customer_edit', {'id': customer.id}) }}"><i class="icon-pencil"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
