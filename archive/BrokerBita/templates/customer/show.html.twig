{% extends 'base.html.twig' %}

{% block title %}Customer{% endblock %}

{% block body %}

    <div class="contentPage-headerShow">
        <div class="contentPage-headerShow-left">
            <a href="{{ path('app_customer_index') }}"><i class="icon-enter5"></i></a>
            <h1>Customer</h1>
        </div>
        <div class="contentPage-headerShow-right">
            <a href="{{ path('app_customer_edit', {'id': customer.id}) }}"><i class="icon-pencil"></i></a>
            {{ include('customer/_delete_form.html.twig') }}    
        </div>
    </div>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ customer.id }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ customer.firstname }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ customer.lastname }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ customer.email }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ customer.phone }}</td>
            </tr>
            <tr>
                <th>Role</th>
                <td>{{ customer.role }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ customer.username }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ customer.password }}</td>
            </tr>
            <tr>
                <th>Profile</th>
                <td><img src="{{ customer.profile }}" class="profilImage"/></td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ customer.createdAt ? customer.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}
