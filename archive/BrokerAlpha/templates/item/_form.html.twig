{{ form_start(form) }}
    <div class="col" style="display: grid; width: 50vw; color: #02b3e4; padding: 10px;">
        {{ form_errors(form) }}
    </div>

    <fieldset class="mb-3">
        <legend class="text-uppercase font-size-sm font-weight-bold" style="color: #2196f3;">
        <a href="{{ path('app_item_index') }}"><i class="icon-enter5"></i></a>
            &nbsp; &nbsp; &nbsp;  Items
        </legend>

        <div class="form-group row">
            <label class="col-form-label col-form-label-lg col-lg-2">Label</label>
            <div class="col-lg-10">
                {{ form_widget(form.label, { 'attr': {'type': 'text', 'class': 'form-control form-control-lg', 'placeholder': "Your Email Address"} }) }}
            </div>
        </div>

        <div class="form-group row">
            <label class="col-form-label col-lg-2">Description</label>
            <div class="col-lg-10">
                {{ form_widget(form.description, { 'attr': {'type': 'number', 'class': 'form-control form-control-lg', 'placeholder': "Your Phone Number"} }) }}
            </div>
        </div>

        <div class="form-group row">
            <label class="col-form-label col-form-label-sm col-lg-2">Price</label>
            <div class="col-lg-10">
                {{ form_widget(form.price, { 'attr': {'type': 'text', 'class': 'form-control form-control-lg', 'placeholder': "Your Password at least 4 characters"} }) }}
            </div>
        </div>
        
        <div class="form-group row">
            <label class="col-form-label col-lg-2"> {{ form_label(form.author) }}</label>
            <div class="col-lg-10">
                {{ form_widget(form.author, {'attr': {'class' : 'selectField'} }) }}
            </div>
        </div>

        <div class="form-group row">
            <label class="col-form-label col-lg-2"> {{ form_label(form.categorie) }}</label>
            <div class="col-lg-10">
                {{ form_widget(form.categorie, {'attr': {'class' : 'selectField'} }) }}
            </div>
        </div>


        <div class="text-right">
            <button type="submit" class="btn btn-primary">{{ button_label|default('Save') }} <i class="icon-paperplane ml-2"></i></button>
        </div>
    </fieldset>

{{ form_end(form) }}




