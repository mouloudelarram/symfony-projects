{% extends 'base.html.twig' %}

{% block title %}Customer{% endblock %}

{% block body %}

    <div class="contentPage-headerShow">
        <div class="contentPage-headerShow-left">
            <legend class="text-uppercase font-size-sm font-weight-bold" style="color: #2196f3;"><a href="{{ path('app_customer_index') }}/{{ role }}"><i class="icon-enter5"></i></a>
                &nbsp; &nbsp; &nbsp;  {{ role }}s
            </legend>
        </div>
        <div class="contentPage-headerShow-right">
            <a href="/customer/{{ role }}/{{customer.id}}/edit"><i class="icon-pencil"></i></a>
            {{ include('customer/_delete_form.html.twig') }}    
        </div>
    </div>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ customer.id }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ customer.firstname }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ customer.lastname }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ customer.email }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ customer.phone }}</td>
            </tr>
            <tr>
                <th>Role</th>
                <td>{{ customer.role }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ customer.username }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ customer.password }}</td>
            </tr>
            <tr>
                <th>Profile</th>
                <td><img src="{{ asset('uploads/' ~ customer.profile) }}" class="profilImage"/></td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ customer.createdAt ? customer.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}
